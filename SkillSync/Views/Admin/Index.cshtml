            <div class="mt-10 grid grid-cols-1 lg:grid-cols-2 gap-8">
                <!-- User Management -->
                <div class="bg-slate-800 p-6 rounded-lg shadow-lg">
                    <h2 class="text-xl font-bold text-white mb-4">User Management</h2>
                    <p class="text-slate-400 mb-4">View and manage all registered users.</p>
                    <button class="bg-blue-600 hover:bg-blue-700 text-white font-medium py-2 px-4 rounded-lg transition">Manage Users</button>
                </div>

                <!-- Content Management -->
                <div class="bg-slate-800 p-6 rounded-lg shadow-lg">
                    <h2 class="text-xl font-bold text-white mb-4">Content Management</h2>
                    <p class="text-slate-400 mb-4">Manage the skills and course recommendations.</p>
                    <button class="bg-blue-600 hover:bg-blue-700 text-white font-medium py-2 px-4 rounded-lg transition">Manage Content</button>
