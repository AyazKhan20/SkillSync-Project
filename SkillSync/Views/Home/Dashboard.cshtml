@{
    ViewData["Title"] = "My Dashboard";
}

<!-- Page-specific styles -->


<div class="bg-slate-900 text-slate-300">
    <!-- Main Content -->
    <main class="max-w-7xl mx-auto p-4 sm:p-6 lg:p-8">

        <!-- Header -->
        <header class="mb-8">
            <h1 class="text-4xl font-bold text-white">Welcome Back, Alex!</h1>
            <p class="mt-2 text-lg text-slate-400">Here's a snapshot of your career journey.</p>
        </header>

        <!-- Dashboard Content -->
        <div class="space-y-8">
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
                <!-- Profile Card -->
                <div class="bg-slate-800 p-6 rounded-lg shadow-lg border border-slate-700 fade-in">
                    <h2 class="text-xl font-bold text-white mb-4">My Profile</h2>
                    <div class="space-y-2">
                        <div>
                            <p class="text-sm font-medium text-slate-400">Name</p>
                            <p class="text-md text-white">Alex Doe</p>
                        </div>
                        <div>
                            <p class="text-sm font-medium text-slate-400">Email</p>
                            <p class="text-md text-white">alex.doe@example.com</p>
                        </div>
                    </div>
                    <a asp-area="Identity" asp-page="/Account/Manage/Index" class="mt-4 block w-full text-center bg-slate-700 hover:bg-slate-600 text-white font-medium py-2 px-4 rounded-lg transition">Edit Profile</a>
                </div>

                <!-- Skills Card -->
                <div class="lg:col-span-2 bg-slate-800 p-6 rounded-lg shadow-lg border border-slate-700 fade-in" style="animation-delay: 100ms;">
                    <h2 class="text-xl font-bold text-white mb-4">My Skills</h2>
                    <div id="skills-container" class="flex flex-wrap gap-2">
                        <!-- Skills will be dynamically inserted -->
                    </div>
                </div>
            </div>

            <!-- Quick Actions Card -->
            <div class="bg-slate-800 p-6 rounded-lg shadow-lg border border-slate-700 fade-in" style="animation-delay: 200ms;">
                <h2 class="text-xl font-bold text-white mb-4">Actions</h2>
                <div class="space-y-3">
                    <a asp-controller="Home" asp-action="Analyze" class="block w-full text-center bg-blue-600 hover:bg-blue-700 text-white font-medium py-3 px-4 rounded-lg transition">Analyze Your Resume & Get Course Recommendations</a>
                </div>
            </div>
        </div>
    </main>
</div>


