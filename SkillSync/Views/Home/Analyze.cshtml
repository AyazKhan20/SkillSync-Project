@{
    ViewData["Title"] = "Analyze Resume";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - SkillSync</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&display=swap" rel="stylesheet">
   
</head>
<body class="bg-slate-900 text-slate-300">

    <!-- Main Content -->
    <main class="max-w-4xl mx-auto p-4 sm:p-6 lg:p-8">

        <!-- Upload & Analysis Section -->
        <section id="upload-section" class="bg-slate-800 p-8 rounded-xl shadow-lg border border-slate-700">
            <div class="text-center">
                <h1 class="text-3xl font-bold text-white">Chart Your Path to Your Dream Job</h1>
                <p class="mt-2 text-lg text-slate-400">Upload your resume, tell us your goal, and let our AI do the rest.</p>
            </div>

            <div class="mt-8 space-y-6">
                <!-- Step 1: Upload Resume -->
                <div>
                    <label class="block text-lg font-semibold text-slate-200 mb-2">Step 1: Upload Your Resume</label>
                    <div id="file-upload-area" class="file-upload-area rounded-lg p-8 text-center cursor-pointer">
                        <input type="file" id="resume-file-input" class="hidden" accept=".pdf">
                        <svg class="mx-auto h-12 w-12 text-slate-500" stroke="currentColor" fill="none" viewBox="0 0 48 48" aria-hidden="true">
                            <path d="M28 8H12a4 4 0 00-4 4v20m32-12v8m0 0v8a4 4 0 01-4 4H12a4 4 0 01-4-4v-4m32-4l-3.172-3.172a4 4 0 00-5.656 0L28 28M8 32l9.172-9.172a4 4 0 015.656 0L28 28m0 0l4 4m4-24h8m-4-4v8" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" />
                        </svg>
                        <p class="mt-2 text-sm text-slate-400">
                            <span class="font-semibold text-blue-400">Click to upload</span> or drag and drop
                        </p>
                        <p class="text-xs text-slate-500">PDF only</p>
                        <p id="file-name" class="mt-2 text-sm font-medium text-green-400"></p>
                    </div>
                </div>

                <!-- Step 2: Enter Dream Job -->
                <div>
                    <label for="dream-job-input" class="block text-lg font-semibold text-slate-200 mb-2">Step 2: What's Your Dream Job?</label>
                    <input type="text" id="dream-job-input" class="w-full px-4 py-3 rounded-md bg-slate-900/50 border-slate-600 text-white focus:border-blue-500 focus:ring-blue-500 text-lg" placeholder="e.g., Senior Python Developer">
                </div>

                <!-- Step 3: Analyze -->
                <div>
                    <button id="analyze-btn" class="w-full flex items-center justify-center gap-2 bg-blue-600 text-white font-bold text-lg px-8 py-4 rounded-lg shadow-lg hover:bg-blue-700 transform hover:scale-105 transition-all disabled:bg-slate-500 disabled:scale-100 disabled:cursor-not-allowed">
                        <span>✨</span> Analyze My Path
                    </button>
                </div>
            </div>
        </section>

        <!-- Loader -->
        <div id="loader" class="hidden my-12 flex justify-center">
            <div class="flex flex-col items-center gap-2">
                <div class="loader"></div>
                <p class="text-slate-400 font-medium">Analyzing... this may take a moment.</p>
            </div>
        </div>

        <!-- Results Section -->
        <section id="results-section" class="hidden mt-8 bg-slate-800 p-8 rounded-xl shadow-lg border border-slate-700 fade-in">
            <h2 class="text-2xl font-bold text-white border-b border-slate-700 pb-3">Your Personalized Roadmap</h2>
            <div id="results-container" class="mt-4 prose max-w-none">
                <!-- Analysis results will be dynamically inserted here -->
            </div>
        </section>
    </main>

    
</body>
</html>
