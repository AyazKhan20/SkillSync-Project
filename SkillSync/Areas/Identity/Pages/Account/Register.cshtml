@page
@model RegisterModel
@{
    ViewData["Title"] = "Sign Up";
    // This now uses the main site layout
    Layout = "/Views/Shared/_Layout.cshtml";
}

<!-- Page-specific styles -->
<style>
    .input-field {
        border: 1px solid #475569; /* slate-600 */
        background: #1e293b; /* slate-800 */
        transition: all 0.3s ease;
    }

        .input-field:focus {
            background: #334155; /* slate-700 */
            border-color: #60a5fa; /* blue-400 */
            outline: none;
        }

        .input-field::placeholder {
            color: #94a3b8; /* slate-400 */
        }

    .text-danger {
        color: #f87171; /* red-400 */
        font-size: 0.875rem;
    }
</style>

<div class="min-h-[calc(100vh-150px)] flex items-center justify-center p-4">
    <div class="w-full max-w-md">
        <div class="bg-slate-800/80 backdrop-blur-lg border border-slate-700 rounded-2xl shadow-2xl p-8 text-white">

            <div class="text-center mb-8">
                <h1 class="text-2xl font-bold mt-4 text-slate-200">Create Your Account</h1>
                <p class="text-slate-400">Join us to start your career journey.</p>
            </div>

            <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="space-y-6">
                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

                <div>
                    <input asp-for="Input.Email" class="input-field w-full px-4 py-3 rounded-lg text-white" autocomplete="username" aria-required="true" placeholder="Email" />
                    <span asp-validation-for="Input.Email" class="text-danger block mt-1"></span>
                </div>

                <div>
                    <input asp-for="Input.Password" class="input-field w-full px-4 py-3 rounded-lg text-white" autocomplete="new-password" aria-required="true" placeholder="Password" />
                    <span asp-validation-for="Input.Password" class="text-danger block mt-1"></span>
                </div>

                <div>
                    <input asp-for="Input.ConfirmPassword" class="input-field w-full px-4 py-3 rounded-lg text-white" autocomplete="new-password" aria-required="true" placeholder="Confirm Password" />
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger block mt-1"></span>
                </div>

                <button id="registerSubmit" type="submit" class="w-full bg-blue-500 text-white font-bold py-3 rounded-lg hover:bg-blue-600 transition">Create Account</button>

                <p class="text-center text-sm text-slate-400 pt-2">
                    Already have an account?
                    <a asp-page="./Login" asp-route-returnUrl="@Model.ReturnUrl" class="font-semibold text-blue-400 hover:underline focus:outline-none">Sign In</a>
                </p>
            </form>

        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
